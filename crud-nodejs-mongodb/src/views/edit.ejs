<%- include('partials/_header') %>

<div class="container">
  <div class="row">

    <!-- form -->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="post">
            <div class="mb-3">
              <input type="text" name="title" value="<%= task.title %>" placeholder="Insert a title" class="form-control">
            </div>
            <div class="mb-3">
              <textarea name="description" cols="80" placeholder="Insert a description" class="form-control"><%= task.description %>
              </textarea>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/_footer') %>
